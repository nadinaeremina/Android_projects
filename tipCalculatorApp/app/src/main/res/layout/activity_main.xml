<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textViewOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:inputType="number"
        android:autofillHints="1000"
        android:hint="@string/sum_order"/>

    <EditText
        android:id="@+id/textViewTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:inputType="number"
        android:autofillHints="100"
        android:hint="@string/sum_tip"/>

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:textSize="26sp"
        android:text="OK"/>

    <TextView
        android:id="@+id/textOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/res_sum_order"
        android:textSize="36sp">
    </TextView>

    <TextView
        android:id="@+id/textOrderNum"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/textTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/res_sum_tip"
        android:textSize="36sp">
    </TextView>

    <TextView
        android:id="@+id/textTipNum"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/res_sum_total"
        android:textSize="36sp">
    </TextView>

    <TextView
        android:id="@+id/textTotalNum"
        android:textSize="26sp"
        android:layout_width="300sp"
        android:layout_height="100sp">
    </TextView>

</LinearLayout>